<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferencesActivity">

    <TextView
        android:id="@+id/textViewLanguePreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Langue"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="118dp" />

    <View
        android:id="@+id/view"
        android:layout_width="331dp"
        android:layout_height="74dp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="286dp" />

    <View
        android:id="@+id/view3"
        android:layout_width="331dp"
        android:layout_height="74dp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="416dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="331dp"
        android:layout_height="74dp"
        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="159dp" />

    <TextView
        android:id="@+id/textViewChoisirLan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez une langue"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="183dp" />

    <TextView
        android:id="@+id/textViewAffichePreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher les notifications"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="304dp" />

    <TextView
        android:id="@+id/textViewAProposPrefernces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="À propos de la Bibliothéque"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="376dp" />

    <TextView
        android:id="@+id/textViewNotificationsPreferences"
        android:layout_width="112dp"
        android:layout_height="24dp"
        android:text="Notifications"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/textViewLiensPreferences"
        android:layout_width="220dp"
        android:layout_height="28dp"
        android:lineSpacingExtra="10sp"
        android:text="Cliquez ici pour savoir plus"
        android:textAllCaps="false"
        android:textColor="@color/colorSecondaryLight"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="438dp" />

    <Switch
        android:id="@+id/switchPreferences"
        android:layout_width="66dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="299dp" />

    <View
        android:id="@+id/viewCouleurFondPreferences"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageViewFlecheRetourPreferences"
        android:layout_width="53dp"
        android:layout_height="43dp"
        android:src="@mipmap/fleche"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textViewPreferences"
        android:layout_width="136dp"
        android:layout_height="42dp"
        android:text="Préférences"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="16dp" />

    <Spinner
        android:id="@+id/spinnerChoixDeLanguePreferences"
        android:layout_width="104dp"
        android:layout_height="22dp"
        android:addStatesFromChildren="false"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="183dp" />
</android.support.constraint.ConstraintLayout>