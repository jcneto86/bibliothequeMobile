<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangerMotPasseActivity">

    <View
        android:id="@+id/bgSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ viewFonddeMotdePasse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#96032730"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/LogoSplashMotdePasse"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@mipmap/logo_bibli"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="42dp" />

    <Button
        android:id="@+id/buttonEnvoyerdeMotdePasse"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@mipmap/button_bg2"
        android:text="Envoyer"
        android:textColor="@color/colorAccent3"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:id="@+id/buttonAnnulerdeMotdePasse"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="@mipmap/button_bg1"
        android:text="Annuler"
        android:textColor="@color/colorAccent3"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="332dp" />

    <EditText
        android:id="@+id/editTextDeMotdePasse"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:hint="Email du compte de l'utilisateur"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="182dp" />

    <TextView
        android:id="@+id/textViewdeMotdePasse"
        android:layout_width="0dp"
        android:layout_height="123dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Votre email n'a pas été enregistré"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>