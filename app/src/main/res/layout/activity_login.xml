<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/bgSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg02" />

    <View
        android:id="@+id/bgColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#96032730"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />

    <View
        android:id="@+id/LogoSplashLogoFondLogin"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@mipmap/logo_bibli"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="42dp" />

    <Button
        android:id="@+id/buttonRecuperationLogin"
        android:layout_width="408dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:text="Récupérer mots de passe"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSeConnecterLogin"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:background="@mipmap/button_bg2"
        android:text="Se Connecter"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="332dp" />

    <EditText
        android:id="@+id/editTextUtulisateurLogin"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:hint="Nom d'utilisateur"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="182dp" />

    <EditText
        android:id="@+id/editTextMotdePasseLogin"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="247dp" />

</android.support.constraint.ConstraintLayout>