<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <View
        android:id="@+id/bgSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg02" />

    <View
        android:id="@+id/bgColorImagedeFondHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#96032730"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/buttonRechercherHome"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:background="@mipmap/button_bg2"
        android:text="Faire une recherche"
        android:textColor="@color/colorAccent3"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="267dp" />

    <EditText
        android:id="@+id/editTextRechercheHome"
        android:layout_width="303dp"
        android:layout_height="52dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="center"
        android:hint="Titre du livre ou nom de l'auteur"
        android:inputType="textPersonName"
        android:textColor="@android:drawable/ic_btn_speak_now"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="182dp" />

    <View
        android:id="@+id/LogoGovSplashLogoHome"
        android:layout_width="387dp"
        android:layout_height="43dp"
        android:layout_gravity="bottom"
        android:layout_margin="15dp"
        android:background="@mipmap/logo_gov"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="453dp" />

    <View
        android:id="@+id/viewCouleurFondHome"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageViewLogoHome"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:src="@mipmap/logo_bibli_w"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="44dp" />

    <ImageView
        android:id="@+id/imageViewBurgeurHome"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:src="@mipmap/bt_menu"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp" />

</android.support.constraint.ConstraintLayout>